			<plugin>
				<groupId>com.coderplus.maven.plugins</groupId>
				<artifactId>copy-rename-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-changes.txt</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<sourceFile>${project.parent.basedir}/docking-frames-core/changes.txt</sourceFile>
							<destinationFile>${project.build.directory}/dock/changes.txt</destinationFile>
						</configuration>
					</execution>
					<execution>
						<id>copy-common.pdf</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
