						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<sourceFile>${project.parent.basedir}/docking-frames-core/readme_full.txt</sourceFile>
							<destinationFile>${project.build.directory}/dock/readme.txt</destinationFile>
